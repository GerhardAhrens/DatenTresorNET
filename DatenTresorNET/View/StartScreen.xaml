<Window
    x:Class="DatenTresorNET.View.StartScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:localConverter="clr-namespace:DatenTresorNET.BaseFunction"
    xmlns:localStatic="clr-namespace:DatenTresorNET.Core"
    xmlns:localUC="clr-namespace:DatenTresorNET.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="StartScreen"
    Width="800"
    Height="500"
    AllowsTransparency="True"
    Background="Transparent"
    Opacity="1"
    ResizeMode="NoResize"
    Style="{DynamicResource ResourceKey=CustomWindowStyle}"
    Tag="{DynamicResource ResourceKey=IconExcelCtrl}"
    TextOptions.TextFormattingMode="Display"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Icon>
        <DrawingImage Drawing="{Binding Path=Tag.Drawing, RelativeSource={RelativeSource AncestorType=Window}}" />
    </Window.Icon>

    <Control.Resources>
        <localConverter:StaticResourceConverter x:Key="StaticResourceConverter" />
    </Control.Resources>

    <Border Style="{DynamicResource ResourceKey=StartScreenBorderStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70" />
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid
                Grid.Row="0"
                Grid.Column="0"
                Background="SteelBlue">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="10,5"
                    HorizontalAlignment="Left"
                    FontSize="26"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Datentresor" />
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10,0"
                    Orientation="Horizontal">

                    <Rectangle
                        Width="10"
                        Height="10"
                        Fill="#E75C14"
                        Stroke="White"
                        StrokeThickness="1" />

                    <Rectangle
                        Width="10"
                        Height="10"
                        Margin="3,0"
                        Fill="#E6B715"
                        Stroke="White"
                        StrokeThickness="1" />

                    <Rectangle
                        Width="10"
                        Height="10"
                        Margin="2,0"
                        HorizontalAlignment="Left"
                        Fill="#3AA0B9"
                        Stroke="White"
                        StrokeThickness="1" />

                    <Rectangle
                        Width="10"
                        Height="10"
                        Margin="2,0"
                        HorizontalAlignment="Left"
                        Fill="#A4BD2D"
                        Stroke="White"
                        StrokeThickness="1" />

                    <TextBlock Foreground="White" Text="Sichere Ablage von Informationen" />
                </StackPanel>
            </Grid>

            <Menu Grid.Row="1" Grid.Column="0">
                <MenuItem Header="Applikation" Tag="IconApplication">
                    <MenuItem
                        x:Name="MenuSettings"
                        Click="MenuSettings_Click"
                        Header="_Einstellungen"
                        Tag="IconSetting" />

                    <MenuItem
                        x:Name="MenuExit"
                        Click="BtnApplicationExit_Click"
                        Header="_Beenden"
                        Tag="IconExit" />
                </MenuItem>

                <MenuItem Header="Datentresor" Tag="IconDatabase">
                    <MenuItem
                        x:Name="MenuDTCreate"
                        Header="_Erstellen"
                        Tag="IconDatabaseAdd" />
                    <MenuItem
                        x:Name="MenuDTDelete"
                        Header="_Löschen"
                        Tag="IconDatabaseRemove" />
                    <MenuItem x:Name="MenuDTLocation" Header="_Speicherort" />
                    <MenuItem x:Name="MenuDTPassword" Header="_Passwort ändern" />
                </MenuItem>
            </Menu>

            <ContentControl
                x:Name="mainContent"
                Grid.Row="2"
                Grid.Column="0"
                Background="Silver"
                Content="{Binding Path=CurrentControl.Value, UpdateSourceTrigger=PropertyChanged}"
                KeyboardNavigation.IsTabStop="False"
                KeyboardNavigation.TabNavigation="None"
                ScrollViewer.CanContentScroll="False"
                Visibility="Visible" />

