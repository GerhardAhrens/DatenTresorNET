    <Border Style="{DynamicResource ResourceKey=StartScreenBorderStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70" />
                <RowDefinition Height="70" />
                <RowDefinition Height="*" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid
                Grid.Row="0"
                Grid.Column="0"
                Background="SteelBlue">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="10,5"
                    HorizontalAlignment="Left"
                    FontSize="26"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Datentresor" />
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10,0"
                    Orientation="Horizontal">

                    <Rectangle
                        Width="10"
                        Height="10"
                        Fill="#E75C14"
                        Stroke="White"
                        StrokeThickness="1" />

                    <Rectangle
                        Width="10"
                        Height="10"
                        Margin="3,0"
                        Fill="#E6B715"
                        Stroke="White"
                        StrokeThickness="1" />

                    <Rectangle
                        Width="10"
                        Height="10"
                        Margin="2,0"
                        HorizontalAlignment="Left"
                        Fill="#3AA0B9"
                        Stroke="White"
                        StrokeThickness="1" />

                    <Rectangle
                        Width="10"
                        Height="10"
                        Margin="2,0"
                        HorizontalAlignment="Left"
                        Fill="#A4BD2D"
                        Stroke="White"
                        StrokeThickness="1" />

                    <TextBlock Foreground="White" Text="Sichere Ablage von Informationen" />
                </StackPanel>
            </Grid>

            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                Margin="10,0,0,10"
                Orientation="Horizontal">

                <UI:PathButton
                    x:Name="BtnApplicationExit"
                    VerticalAlignment="Bottom"
                    Background="Transparent"
                    CornerRadius="3"
                    Foreground="Blue"
                    IsEnabled="True"
                    MouseOverBackground="LightGray"
                    PathData="{StaticResource ResourceKey=AppExit}"
                    PathWidth="36"
                    PressedBackground="LightGray"
                    Tag="{x:Static localStatic:ToolbarButtons.ApplicationExit}"
                    ToolTip="Programm beenden" />

                <UI:PathButton
                    x:Name="BtnAddDatabase"
                    VerticalAlignment="Bottom"
                    Background="Transparent"
                    CornerRadius="3"
                    Foreground="Blue"
                    IsEnabled="True"
                    MouseOverBackground="LightGray"
                    PathData="{StaticResource ResourceKey=AddDatabase}"
                    PathWidth="36"
                    PressedBackground="LightGray"
                    Tag="{x:Static localStatic:ToolbarButtons.AddDatabase}"
                    ToolTip="Neue Datenbank hinzufügen" />

                <UI:PathButton
                    x:Name="BtnDatabaseDelete"
                    VerticalAlignment="Bottom"
                    Background="Transparent"
                    CornerRadius="3"
                    Foreground="Red"
                    IsEnabled="True"
                    MouseOverBackground="LightGray"
                    PathData="{StaticResource ResourceKey=DeleteDatabase}"
                    PathWidth="36"
                    PressedBackground="LightGray"
                    Tag="{x:Static localStatic:ToolbarButtons.DeleteDatabase}"
                    ToolTip="ausgewählte Datenbank löschen" />

                <UI:PathButton
                    x:Name="BtnDatabaseStart"
                    VerticalAlignment="Bottom"
                    Background="Transparent"
                    CornerRadius="3"
                    Foreground="Blue"
                    IsEnabled="True"
                    MouseOverBackground="LightGray"
                    PathData="{StaticResource ResourceKey=StartDatabase}"
                    PathWidth="36"
                    PressedBackground="LightGray"
                    Tag="{x:Static localStatic:ToolbarButtons.StartDatabase}"
                    ToolTip="Ausgewählte Datenbank aufrufen" />

                <UI:PathButton
                    x:Name="BtnInfo"
                    VerticalAlignment="Bottom"
                    Background="Transparent"
                    CornerRadius="3"
                    Foreground="Blue"
                    IsEnabled="True"
                    MouseOverBackground="LightGray"
                    PathData="{StaticResource ResourceKey=DatabaseInfo}"
                    PathWidth="36"
                    PressedBackground="LightGray"
                    Tag="{x:Static localStatic:ToolbarButtons.InfoDatabase}"
                    ToolTip="Informationen zur ausgewählten Datenbank anzeigen" />

                <Button
                    x:Name="BtnAddFunctions"
                    Grid.Row="5"
                    Width="50"
                    Margin="5,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Content="{StaticResource ResourceKey=Button3Dots}"
                    Style="{StaticResource ResourceKey=FlatButton}"
                    Tag="{x:Static localStatic:ToolbarButtons.AddFunctions}"
                    ToolTip="Weitere Funktionen anzeigen" />
            </StackPanel>

            <ContentControl
                x:Name="mainContent"
                Grid.Row="2"
                Grid.Column="0"
                Background="Silver"
                Content="{Binding Path=CurrentControl.Value, UpdateSourceTrigger=PropertyChanged}"
                KeyboardNavigation.IsTabStop="False"
                KeyboardNavigation.TabNavigation="None"
                ScrollViewer.CanContentScroll="False"
                Visibility="Visible" />

