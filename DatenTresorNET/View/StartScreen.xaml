<Window
    x:Class="DatenTresorNET.View.StartScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DatenTresorNET.View"
    xmlns:localConverter="clr-namespace:DatenTresorNET.BaseFunction"
    xmlns:localStatic="clr-namespace:DatenTresorNET.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="StartScreen"
    Width="800"
    Height="500"
    AllowsTransparency="True"
    Background="Transparent"
    Opacity="1"
    ResizeMode="NoResize"
    Style="{DynamicResource ResourceKey=CustomWindowStyle}"
    Tag="{DynamicResource ResourceKey=IconExcelCtrl}"
    TextOptions.TextFormattingMode="Display"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Icon>
        <DrawingImage Drawing="{Binding Tag.Drawing, RelativeSource={RelativeSource AncestorType=Window}}" />
    </Window.Icon>

    <Control.Resources>
        <localConverter:StaticResourceConverter x:Key="StaticResourceConverter" />

        <Style x:Key="CustomWindowStyle" TargetType="{x:Type Window}">
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome
                        CaptionHeight="40"
                        CornerRadius="5"
                        GlassFrameThickness="0"
                        NonClientFrameEdges="None"
                        ResizeBorderThickness="5"
                        UseAeroCaptionButtons="False" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StartScreenBorderStyle" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="5" />
        </Style>

        <Image
            x:Key="MenuItemImage"
            Width="16"
            Height="16"
            x:Shared="False">
            <Image.Source>
                <DrawingImage>
                    <DrawingImage.Drawing>
                        <GeometryDrawing Brush="Blue" Geometry="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType=MenuItem}, Converter={StaticResource ResourceKey=StaticResourceConverter}}" />
                    </DrawingImage.Drawing>
                </DrawingImage>
            </Image.Source>
        </Image>

        <Image
            x:Key="ButtonImage"
            Width="24"
            Height="28"
            x:Shared="False">
            <Image.Source>
                <DrawingImage>
                    <DrawingImage.Drawing>
                        <GeometryDrawing Brush="Blue" Geometry="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType=Button}, Converter={StaticResource ResourceKey=StaticResourceConverter}}" />
                    </DrawingImage.Drawing>
                </DrawingImage>
            </Image.Source>
        </Image>

        <Style TargetType="MenuItem">
            <Setter Property="Icon" Value="{StaticResource ResourceKey=MenuItemImage}" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Content" Value="{StaticResource ResourceKey=ButtonImage}" />
        </Style>

        <Style x:Key="FlatButton" TargetType="Button">
            <Setter Property="Content" Value="{StaticResource ResourceKey=ButtonImage}" />
            <Setter Property="Background" Value="{x:Null}" />
            <Setter Property="BorderBrush" Value="{x:Null}" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Foreground" Value="Blue" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border
                            x:Name="border"
                            Padding="{TemplateBinding Padding}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                RecognizesAccessKey="True"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="true" />
                            <Trigger Property="IsDefaulted" Value="true" />
                            <Trigger Property="IsPressed" Value="true" />
                            <Trigger Property="ToggleButton.IsChecked" Value="true" />

                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{x:Null}" />
                                <Setter Property="BorderBrush" Value="{x:Null}" />
                                <Setter Property="Foreground" Value="Gray" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter TargetName="border" Property="Background" Value="LightGray" />
                            </Trigger>

                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="FontWeight" Value="Bold" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Control.Resources>

    <Border Style="{DynamicResource ResourceKey=StartScreenBorderStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70" />
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid
                Grid.Row="0"
                Grid.Column="0"
                Background="SteelBlue">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="10,5"
                    HorizontalAlignment="Left"
                    FontSize="26"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Datentresor" />
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10,0"
                    Orientation="Horizontal">

                    <Rectangle
                        Width="10"
                        Height="10"
                        Fill="#E75C14"
                        Stroke="White"
                        StrokeThickness="1" />

                    <Rectangle
                        Width="10"
                        Height="10"
                        Margin="3,0"
                        Fill="#E6B715"
                        Stroke="White"
                        StrokeThickness="1" />

                    <Rectangle
                        Width="10"
                        Height="10"
                        Margin="2,0"
                        HorizontalAlignment="Left"
                        Fill="#3AA0B9"
                        Stroke="White"
                        StrokeThickness="1" />

                    <Rectangle
                        Width="10"
                        Height="10"
                        Margin="2,0"
                        HorizontalAlignment="Left"
                        Fill="#A4BD2D"
                        Stroke="White"
                        StrokeThickness="1" />

                    <TextBlock Foreground="White" Text="Sichere Ablage von Informationen" />
                </StackPanel>
            </Grid>

            <Menu Grid.Row="1" Grid.Column="0">
                <MenuItem Header="Applikation" Tag="IconApplication">
                    <MenuItem
                        x:Name="MenuSettings"
                        Click="MenuSettings_Click"
                        Header="_Einstellungen"
                        Tag="IconSetting" />

                    <MenuItem
                        x:Name="MenuExit"
                        Click="MenuExit_Click"
                        Header="_Beenden"
                        Tag="IconExit" />
                </MenuItem>

                <MenuItem Header="Datentresor" Tag="IconDatabase">
                    <MenuItem
                        x:Name="MenuDTCreate"
                        Header="_Erstellen"
                        Tag="IconDatabaseAdd" />
                    <MenuItem
                        x:Name="MenuDTDelete"
                        Header="_Löschen"
                        Tag="IconDatabaseRemove" />
                    <MenuItem x:Name="MenuDTLocation" Header="_Speicherort" />
                    <MenuItem x:Name="MenuDTPassword" Header="_Passwort ändern" />
                </MenuItem>
            </Menu>

            <!--#region Arbeitsbereich-->
            <GroupBox
                x:Name="gbSearchWaiting"
                Grid.Row="2"
                Margin="20"
                Visibility="{Binding Path=ShowSearchWaiting.Value, UpdateSourceTrigger=PropertyChanged}">
                <GroupBox.Header>
                    <Border
                        Background="#F2F2F2"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="2">
                        <TextBlock Margin="3" Text="Datenbank suchen und laden ..." />
                    </Border>
                </GroupBox.Header>

                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="22"
                    FontWeight="Bold"
                    Text="Suchen nach vorhanden Datenbanken" />

            </GroupBox>

            <GroupBox
                x:Name="gbNoDatabase"
                Grid.Row="2"
                Margin="20"
                Visibility="{Binding Path=ShowNoDatabase.Value, UpdateSourceTrigger=PropertyChanged}">
                <GroupBox.Header>
                    <Border
                        Background="#F2F2F2"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="2">
                        <TextBlock Margin="3" Text="Neue Datenbank erstellen" />
                    </Border>
                </GroupBox.Header>
                <Grid Margin="10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2">
                        <Run FontSize="14" Text="Über diesen Dialog kann einen neue leere Datenbank erstellt werden." />
                        <LineBreak />
                        <Run FontSize="14" Text="Geben Sie hierzu einen Namen und eine Passwort für die Datenbank an" />
                    </TextBlock>

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="Name der Datenbank" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="Passwort" />

                    <StackPanel
                        Grid.Row="3"
                        Grid.Column="1"
                        Orientation="Horizontal">
                        <Button
                            x:Name="BtnDatabaseAdd"
                            Width="50"
                            HorizontalAlignment="Left"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            Click="BtnDatabaseAdd_Click"
                            Style="{StaticResource ResourceKey=FlatButton}"
                            Tag="IconDatabaseAdd" />

                        <Button
                            x:Name="BtnApplicationExit"
                            Width="50"
                            Margin="20,0"
                            HorizontalAlignment="Left"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            Click="BtnApplicationExit_Click"
                            Style="{StaticResource ResourceKey=FlatButton}"
                            Tag="IconExit" />
                    </StackPanel>
                </Grid>

            </GroupBox>

            <GroupBox
                x:Name="gbFoundDatabase"
                Grid.Row="2"
                Margin="20"
                Visibility="{Binding Path=ShowDatabase.Value, UpdateSourceTrigger=PropertyChanged}">
                <GroupBox.Header>
                    <Border
                        Background="#F2F2F2"
                        BorderBrush="Black"
                        BorderThickness="1"
                        CornerRadius="2">
                        <TextBlock Margin="3" Text="Datenbank auswählen" />
                    </Border>
                </GroupBox.Header>
            </GroupBox>
            <!--#endregion Arbeitsbereich-->

            <!--#region Statuszeile-->
            <StatusBar
                Grid.Row="3"
                Height="Auto"
                Background="Transparent"
                FontSize="13">
                <StatusBarItem x:Name="statusBarItemUserDomainName" DockPanel.Dock="Left">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{StaticResource ResourceKey=IconStatusbarUser}" />
                        <Label Content="{x:Static localStatic:StatusbarContent.User}" />
                    </StackPanel>
                </StatusBarItem>

                <StatusBarItem DockPanel.Dock="Right">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{x:Static localStatic:StatusbarContent.CurrentDate}" />
                        <Label Content="{StaticResource ResourceKey=IconStatusbarCalendar}" />
                    </StackPanel>
                </StatusBarItem>

                <Separator Width="1" Background="Black" />

                <StatusBarItem x:Name="sbiDatabase" DockPanel.Dock="Left">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{StaticResource ResourceKey=IconStatusbarDatabase}" />
                        <Label Content="{Binding Path=(localStatic:StatusbarContent.DatabaseInfo)}" />
                    </StackPanel>
                </StatusBarItem>
            </StatusBar>
            <!--#endregion Statuszeile-->
        </Grid>
    </Border>
</Window>
